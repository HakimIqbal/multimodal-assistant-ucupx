# ===================== LANGSMITH (LangChain Tracing) =====================
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT="https://api.smith.langchain.com"
LANGSMITH_API_KEY=your_langsmith_api_key
LANGSMITH_PROJECT=your_langsmith_project_name
TOKENIZERS_PARALLELISM=false

# ===================== API KEY MODEL =====================
GROQ_API_KEY=your_groq_api_key
GEMINI_API_KEY=your_gemini_api_key
OPENROUTER_API_KEY=your_openrouter_api_key

# ===================== PINECONE =====================
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment

# ===================== GOOGLE DRIVE =====================
GOOGLE_DRIVE_TOKEN=your_google_drive_token

# ===================== CLOUDINARY (Optional) =====================
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ===================== SUPABASE =====================
SUPABASE_URL=https://xxxx.supabase.co
SUPABASE_KEY=your_supabase_anon_or_service_role_key

# ===================== ADMIN =====================
ADMIN_EMAIL=your_admin_email

# ===================== FIREBASE CONFIGURATION =====================
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=your_service_account_email@your_project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_firebase_client_id
FIREBASE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your_service_account_email%40your_project.iam.gserviceaccount.com
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token
FIREBASE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs

# ===================== JWT =====================
JWT_SECRET_KEY=your_jwt_secret_key

# ===================== APPLICATION CONFIGURATION =====================
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000
DEBUG=true

# ===================== CORS =====================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# ===================== RATE LIMITING =====================
RATE_LIMIT_REGISTER=5
RATE_LIMIT_LOGIN=10
RATE_LIMIT_CHAT=100
RATE_LIMIT_GUEST=10

# ===================== LOGGING =====================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ===================== DATABASE POOL =====================
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# ===================== MONITORING =====================
ENABLE_METRICS=true
ENABLE_LOGGING=true
ENABLE_ALERTS=false

# ===================== EMAIL CONFIGURATION (Optional) =====================
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USERNAME=your_email@yourdomain.com
SMTP_PASSWORD=your_email_password
SMTP_USE_TLS=true

# ===================== FILE UPLOAD =====================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,txt,doc,docx,md

# ===================== CACHE CONFIGURATION =====================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# ===================== BACKUP CONFIGURATION =====================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ===================== IRON.IO CACHE CONFIGURATION =====================
IRON_IO_TOKEN=your_iron_io_token
IRON_IO_PROJECT_ID=your_iron_io_project_id
IRON_IO_CACHE_NAME=your_iron_io_cache_name